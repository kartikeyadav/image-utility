<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="stylesheet" href="/css/styles.css" />
        <script src="/js/ui.js" defer></script>
        <title><%=title%></title>
    </head>
    <body>
        <form
            action="/api/images/"
            method="POST"
            enctype="multipart/form-data"
            id="uploadForm"
        >
            <!-- Select Image -->
            <label for="select-img">Select File</label>
            <input
                type="file"
                name="imageFile"
                id="select-img"
                accept="image/*"
                value=""
                required
            />
            <!-- Upload Image -->
            <button type="submit" id="upload-img">Upload file</button>
            <!-- User Prompts -->
            <p id="userPrompt"></p>
        </form>
        <!-- Show Links -->
        <br />
        <hr />
        <br />
        <div>
            <a href="/api/images" id="showLinksBtn">My Links</a>
            <ol>
                <% if(images.length !== 0){ %> <% images.forEach((image)=>{ %>

                <br />
                <li class="imageLink">
                    <a href="/api/images/<%= image._id%>" target="_blank"
                        ><%=image.name%></a
                    >
                </li>

                <% }); %> <%} %>
            </ol>
        </div>
    </body>
</html>
